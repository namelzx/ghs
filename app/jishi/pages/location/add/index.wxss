/* pages/product/index.wxss */

page {
  background: #f7f7f7;
}

.product-container {
  background: #fff;
}

.list-title {
  margin-bottom: 24rpx;
  font-size: 32rpx;
  color: #3c3c3c;
}

.pro-img-list {
  padding: 20rpx 30rpx;
}

.pro-video-list {
  padding: 20rpx 30rpx;
}

.product-container .van-uploader__upload {
  border-color: #fdaa5a;
  background: #fefdfb;
}

.product-container .van-uploader__upload .van-icon-plus {
  color: #fdaa5a;
}

.product-container .van-cell__title {
  font-size: 32rpx;
}

.pro-detail-wrap {
  margin-bottom: 200rpx;
}

.post-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 28rpx 0;
  z-index: 9;
  box-shadow: 0 0 10rpx 0 #d5d5d5;
}

.post-btn {
  width: 30%;
  margin-left: 35%;
  background: #fdaa5a;
  text-align: center;
  padding: 8px 0;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
}

.van-uploader__preview-image{
  width: 75px !important;
height: 75px !important;

}
.van-uploader__upload{
  width: 75px !important;
   height: 75px !important;
}
.cm{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 20%;
  
}
.cm .post-btn{
  margin-left: 0%;
}

/* 当前小区 */


.has-community-container{
  height: 324rpx;
  position: relative;
}
.has-community-content{
  padding-top: 68rpx;
  box-sizing: border-box;
  position: absolute;
 top: 10rpx;
width: 690rpx;
height: 308rpx;
  left: 30rpx;
  background: #FFFFFF;
  box-shadow: 0 16rpx 30rpx 0 rgba(255,197,4,0.28);
  border-radius: 20rpx;
  z-index: 3;
  text-align: center;
  padding: 15rpx;
}
.has-community-inner{
  padding-top: 50rpx;
  width: 100%;
  height: 100%;
  border: 1rpx dashed #ddd;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.community-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  top: -50rpx;
  left: 50%;
  margin-left: -50rpx;
  z-index: 3;
}
.community-user{
  color: #AEAEAE;
  font-size: 26rpx;
  line-height: 38rpx;
  font-family: PingFangSC-Medium;
}
.community-name{
  margin-top: 42rpx;
  font-size: 36rpx;
  color: #282828;
  line-height: 50rpx;
  font-family: PingFangSC-Semibold;
}
.community-address{
  margin-top: 10rpx;
  font-size: 26rpx;
  line-height: 38rpx;
  color: #666;
  padding: 0 86rpx;
  font-family: PingFangSC-Medium;
}
.icon-community-address{
  position: absolute;
  width: 108rpx;
  height: 88rpx;
  bottom: 0rpx;
  right: 56rpx;
}

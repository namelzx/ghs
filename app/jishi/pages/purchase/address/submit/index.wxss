/* pages/purchase/address/submit/index.wxss */
page{
  background: #f5f5f5;
}
.submit-box{
  background: #ffffff;
  width: 700rpx;
  margin: 30rpx auto;
  border-radius: 20rpx;
}
.submit-warp{
  margin: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #eeeeee;
  background: #ffffff;
}
.warp_name{
  width: 150rpx;
}
.submit-warp input{
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.submit-warp .warp_right  {
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;

}
.warp_right .warp_right_name{
  color: #74767c;
}
.adds-save{
  margin: 100rpx auto 0;
  width: 450rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fdaa5a;
  color: #ffffff;
  border-radius: 10rpx;
}

/* 所选地区 */
.close-icon {
  position: absolute;
  right: 40rpx;
  top: 20rpx;
}
.area-list {
  box-sizing: border-box;
  padding: 10rpx 40rpx;
  padding-bottom: 32rpx;
  color: #909399;
}
.hot-province {
  box-sizing: border-box;
  padding: 20rpx;
}
.hot-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 60rpx;
}
.area-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(178, 178, 178, 0.65);
  z-index: 100;
}
.title-box {
  border-bottom: 1rpx solid #f2f6fc;
  
}
[class*="van-hairline"]::after {
  border: none;
}
.main-box {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 200rpx;
  border-top-left-radius: 60rpx;
  border-top-right-radius: 60rpx;
  background-color: #ffffff;
  z-index: 100;
}
.area-item {
  font-size: 30rpx;
  font-weight: 400;
  height: 60rpx;
  color: #606266;
}
.select-contens{

}
.select-contens .select-contens-title{
  color: #606266;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 30rpx;
}
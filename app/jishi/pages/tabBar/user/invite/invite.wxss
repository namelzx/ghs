/* pages/invite/invite.wxss */

.data-box{
    width: 100%;
    height:262rpx;
    border-top:3rpx solid #efefef;
    border-bottom:3rpx solid #efefef;
    overflow: hidden;
    position: relative;
}

.data-box-tx{
    width: 135rpx;
    height:135rpx;
    border-radius: 50%;
    margin:0 auto;
    margin-top:40rpx;
}

.data-box-tx image{
   display: block;
   width: 100%;
   height:100%;
}

.data-box text{
   display: block;
   text-align: center;
   font-size: 28rpx;
   color:#151515;
   line-height: 80rpx;
}

.data-box .gow{
  display: block;
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  background: #e62329;
  color:#fff;
  width:140rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
}


.money-box{
    display: flex;
    flex-direction: row;
    justify-content:space-between;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 20rpx;
     align-items:center;
}

.item-x{
   width: 1px;
   background: #d3d3d3;
   height:60rpx;
}

.item{
   width: calc((100% - 1px) / 4);
}

.item view{
   font-size: 30rpx;
   color:#373737;
   text-align: center;
   margin-bottom: 16rpx;
}

.item text{
   display: block;
   font-size: 30rpx;
   color:#e62329;
   text-align: center;
}


.team-box{
   width: 100%;
   box-sizing: border-box;
   padding: 40rpx 20rpx;
   display: flex;
   flex-direction: row;
   border-top:20rpx solid #eee;
   border-bottom: 3rpx solid #eee;
}

.team-box .team-lm:nth-of-type(1) image{
     width: 80rpx;
     height: 70rpx;
}

.team-box .team-lm:nth-of-type(2) image{
     width: 89rpx;
     height: 60rpx;
}

.team-lm{
    width: 50%;
    height: 200rpx;
    display: flex;
    flex-direction: column;

}

.team-lm image{
   display: block;
   margin: auto;
   
}

.team-lm view{
   font-size: 30rpx;
   color:#121212;
   text-align: center;
   margin-top:5rpx;
}

.team-lm text{
   font-size: 30rpx;
   color:#9999b2;
   display: block;
   text-align: center;
}

.list-item{
   width: 100%;
   box-sizing: border-box;
   padding: 0 20rpx;
   border-bottom: 3rpx solid #eee;
   display: flex;
   flex-direction: row;
   height:100rpx;
    align-items:center;
  justify-content:space-between;
}

.list-item text{
   font-size: 30rpx;
   color:#121212;
}


.list-item image{
   width: 13rpx;
   height: 24rpx;
}
.list-box{
  border-top: 20rpx solid #eee;
}
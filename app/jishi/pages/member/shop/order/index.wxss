.P-oder-list{
  height: 100vh;
  padding-bottom: 3rpx;
  background-color: rgba(248, 248, 248, 0.75);
  padding-top: 100rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.order-items{
  flex: 1;
  height: 1;
  /* 避免被无限增大 */
}
.order-items-wraper{
   padding: 21rpx 20rpx 0rpx 20rpx;
   background: #F7F7F7;
}
.nav-bar {
  position: fixed;
  top: 0;
  left: 0; 
  width: 100%;
  white-space:nowrap;
  font-size: 32rpx;
  height: 100rpx;
  /* border-bottom: solid 1rpx #efefef; */
  background-color: #fff;
  z-index: 100;
  line-height: 100rpx;
}
.nav-bar .item {
  display: inline-block;
  padding: 0 35rpx;
  /* background-color: white;   */
  position: relative; 
}
.nav-bar .item .word{
  font-size: 28rpx;
  line-height: 28rpx;
  color: #282828;
  font-weight:400;
}
.nav-bar .item.active .word{
  color: #333333;
  font-weight:600;
  /* border-bottom: 2px solid #ff0600; */
  font-size: 28rpx;
}
.nav-active-bottom{
  position: absolute;
  bottom: 0;
  left: 50%;
  z-index: -1;
  transform: translateX(-50%);
  width:75rpx;
  height:20rpx;
  background:linear-gradient(147deg,rgba(254,227,53,1) 0%,rgba(254,219,2,1) 100%);
}

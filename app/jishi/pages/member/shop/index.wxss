/* pages/member/shop/index.wxss */
.shop_head{
  height: 500rpx;
  /* background: #f87aeeab; */
  /* background-size: 100% 100%; */
  background-size: cover;
  overflow: hidden;
  background-repeat:no-repeat;
}
.head_imgs{
  width: 130rpx;
  height: 130rpx;
  background: #ffffff;
  border-radius: 50%;
  margin: 30rpx auto 20rpx;
}
.head_imgs image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.head_name{
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.head_community{
  text-align: center;
  color: #ffffff;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.shop_tabs{
  background: #ffffff;
}
.shop_tabs_warp{
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 400rpx;
  margin: 0 auto;

}
.shop_tabs_warp .warp_title{
  color: #bebebe;
}
.shop_tabs_warp .warp_title-active{
  color: #333333;
  font-weight: bold;
  position: relative;
}
.warp_title-active .warp_title-active_hr{
  position: absolute;
  bottom: -15rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 80rpx;
  height: 6rpx;
  background: rgb(255, 153, 0);
}

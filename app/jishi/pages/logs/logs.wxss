page{
  width: 100%;
  height: 100%;
  background: #ffa71f;
}
.main view{
  font-size: 26rpx;
  color: white;
  text-align: center;
  margin-top: 80rpx;
}
.save-button {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 40rpx;
  right: 40rpx;
  border-radius: 50rpx;
  z-index: 200;
  background: rgba(0, 0, 0, 0.75);
}

.save-button .share-image {
  position: absolute;
  top: 22rpx;
  left: 22rpx;
  width: 36rpx;
  height: 36rpx;
}
/*将canvas移到看不到的地方生成*/
canvas{
  position: absolute;
  left: 0;
  right: 0;
  top: -9999rpx;
  bottom: 0;
  margin: auto;
}
.main image{
  width: 80%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

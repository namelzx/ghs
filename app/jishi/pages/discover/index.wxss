/* pages/discover/index.wxss */

.discover-container {
  background: #f8f8f8;
}

.tabs {
  padding: 30rpx 20rpx 0;
  display: flex;
  border-bottom: 1px solid #f5f5f5;
  background: #fff;
}

.tabs .tab-item {
  width: 50%;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  padding-bottom: 10rpx;
}

.tabs .tab-item text {
  position: relative;
  display: inline-block;
  font-size: 28rpx;
  padding-bottom: 10rpx;
  margin-top: 10rpx;
}

.tabs .tab-item .active {
  font-size: 32rpx;
  color: #333;
  font-weight: 800;
  margin-top: 0;
}

.tabs .tab-item text::before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-bottom: 2px solid transparent;
  transform: scaleX(0.6);
  transition: all 0.5s;
}

.tabs .tab-item .active::before {
  border-bottom: 2px solid #efad52;
}

.topic-wrap {
  padding: 20rpx 24rpx;
  background: #f8f8f8;
}

.topic-item {
  display: flex;
  padding: 16rpx 14rpx 10rpx;
  background: #fff;
  margin: 14rpx 0;
  border-radius: 14rpx;
  overflow: hidden;
}

.topic-img {
  width: 20%;
}

.topic-img image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.topic-info {
  width: 80%;
}

.topic-info .topic-name {
  font-size: 32rpx;
  color: #000;
  font-weight: 500;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
}

.topic-info .topic-desc {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
  font-size: 24rpx;
  color: #666;
  margin: 10rpx 0;
}

.topic-info .topic-detail {
  color: #c9c9c9;
  font-size: 24rpx;
}

.topic-info .topic-detail text {
  padding-right: 10rpx;
  border-right: 1px solid #e5e5e5;
  display: inline-block;
}

.topic-info .topic-detail text:last-child {
  padding-left: 14rpx;
  border-right: unset;
}

.masonry {
  column-count: 2;
  column-gap: 4rpx;
  padding: 30rpx 6rpx;
  /* background: #efad52; */
}

.item {
  margin-bottom: 30rpx;
  margin: 0 20rpx 30rpx;
  -webkit-column-break-inside: avoid;
  break-inside: avoid;
  background: #fff;
  border-radius: 14rpx;
  overflow: hidden;
}

.item-img  image {
  width: 100%;
}

.item-title {
  font-size: 30rpx;
  padding: 0 10rpx;
  color: #333;
}

.item-topic {
  font-weight: 500;
  color: #ebb70d;
  font-size: 24rpx;
  padding: 0 10rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-view {
  font-size: 24rpx;
  display: flex;
  padding: 10rpx 10rpx 20rpx;
  color: #c1c1c1;
}

.item-view .left-view {
  width: 72%;
}

.item-view .right-view {
  width: 28%;
  text-align: right;
  position: relative;
}

.like-icon {
  position: absolute;
  top: 6rpx;
  left: 16rpx;
}

.item-view .like-num {
  position: absolute;
  top: 2rpx;
  left: 38rpx;
}

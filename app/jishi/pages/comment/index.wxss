/* pages/comment/index.wxss */
.eva-warp{
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}
.eva-content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
}
.eva-content-imgs{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.eva-content-imgs image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.eva-content-right{
  width: 620rpx;
  font-size: 30rpx;
  font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
  color: #303133;
}
.eva-content-right-flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.eva-content-right-flex .create_time{
  color: #606266;
  font-size: 25rpx;
}
.eva-content-right .desc{
  font-size: 26rpx;
  margin: 10rpx 0;
  font-family: Small;
  color: #606266;
   display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}
.eva-content-right .right-imgs{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.right-imgs .imgs{
  width: 120rpx;
  height: 120rpx;
  margin-right: 15rpx;
}
.right-imgs .imgs image{
  width: 100%;
  height: 100%;
}
/* components/recom/index.wxss */

.big-title {
  text-align: center;
  color: #000;
  font-weight: 500;
  font-size: 36rpx;
}

.recom {
  overflow: hidden;
}

.recom-list {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
  padding: 0 24rpx;
}

.recom-item {
  width: 44%;
  margin: 10rpx;
  background: #fff;
  border-radius: 14rpx;
  overflow: hidden;
  padding: 0 10rpx;
}

.recom-img image {
  width: 100%;
  height: 328rpx;
}

.recom-name {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recom-price {
  font-size: 30rpx;
  color: #f00;
  padding: 14rpx 4rpx;
}

.recom-price text {
  font-size: 20rpx;
}

.recom-price text:last-child {
  font-size: 26rpx;
  color: #e5e5e5;
  text-decoration: line-through;
  margin-left: 8rpx;
}
